{
  "name": "next-server-theme-repo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "findMismatch": "syncpack list-mismatches",
    "fixMismatch": "syncpack fix-mismatches",
    "postinstall": "bun run findMismatch"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "latest",
    "syncpack": "^12.3.2",
    "@repo/eslint-config": "workspace: *",
    "@repo/typescript-config": "workspace: *"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/examples/*"
  ]
}
