{
  "name": "next-server-theme",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "manypkg check"
  },
  "dependencies": {
    "@repo/eslint-config": "workspace: *",
    "@repo/typescript-config": "workspace: *",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "@manypkg/cli": "^0.21.4",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/examples/*"
  ]
}
