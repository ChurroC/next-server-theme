{
  "name": "next-themes-compare",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "findMismatch": "syncpack list-mismatches",
    "fixMismatch": "syncpack fix-mismatches",
    "postinstall": "bun run findMismatch",
    "push": "bun run format && git add . && echo $m && git commit -m $m && echo $m  && git push"
  },
  "scriptPushComment": "Currently for push you have to do m='message' bun run push until https://github.com/oven-sh/bun/issues/73 gets resolved",
  "devDependencies": {
    "@repo/eslint-config": "workspace: *",
    "@repo/typescript-config": "workspace: *",
    "cross-var": "^1.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "syncpack": "^12.3.2",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "apps/web",
    "apps/examples/*",
    "apps/comparison/*"
  ]
}
