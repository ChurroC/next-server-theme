{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["@repo/config-eslint#properInputs"],
      "inputs": ["eslint.config.js"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!README.md",
        "!LICENSE",
        "!eslint.config.js",
        "!playwright.config.ts",
        "!src/tests/**"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "test": {
      "dependsOn": ["build", "@repo/config-playwright#properInputs"],
      "env": ["CI", "port"],
      "outputs": ["playwright/**"]
    },
    "showTests": {
      "dependsOn": ["test"],
      "persistent": true
    }
  }
}
