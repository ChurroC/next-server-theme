{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "deploy": {
      "dependsOn": ["lint", "build", "test"],
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "build": {
      "inputs": ["*", "!tests"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist"],
      "env": ["NODE_ENV", "SKIP_ENV_VALIDATION"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
